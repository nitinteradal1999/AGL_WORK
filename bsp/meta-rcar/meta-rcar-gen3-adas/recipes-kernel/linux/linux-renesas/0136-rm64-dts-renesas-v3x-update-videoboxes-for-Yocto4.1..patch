+/ {
+	model = "Renesas V3MSK Videobox Mini board V2 based on r8a77970";
+
+	leds {
+		compatible = "gpio-leds";
+
+		led5 {
+			label = "board:status";
+			gpios = <&gpio3 16 GPIO_ACTIVE_HIGH>;
