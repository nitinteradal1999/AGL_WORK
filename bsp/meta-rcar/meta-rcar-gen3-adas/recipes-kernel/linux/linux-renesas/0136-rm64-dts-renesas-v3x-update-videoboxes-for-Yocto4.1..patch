+	};
+
+	msiof2_pins: msiof2 {
+		groups = "msiof2_clk", "msiof2_sync", "msiof2_txd", "msiof2_rxd";
+		function = "msiof2";
+	};
+};
+
+&scif3 {
+	/* pin conflict with msiof2 */
+	/* set R240 and remove R241 before enabling */
+	status = "disabled";
+};
